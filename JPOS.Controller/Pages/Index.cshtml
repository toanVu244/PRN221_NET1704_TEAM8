@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<body style="font-family: 'Roboto', Helvetica, Arial, sans-serif; font-weight: 100; font-size: 12px; line-height: 30px; color: #777; background: #efefef; margin: 0;">
    <div style="background-color: rgb(241, 234, 217); flex: 1 1; text-align: center; font-size: 15px; padding: 10px; margin-top: 0;width:100%">
        <h2 style="margin: 0;">Giao hàng miễn phí cho các đơn hàng trên $2000</h2>
    </div>

    <div style="display: flex; justify-content: space-evenly; flex-wrap: wrap;">
        @foreach (var element in Model)
        {
            <div style="text-align: center; width: 32%;">
                <img src="@element.Image" alt="foto" width="380px" height="380px"
                     style="border: rgb(230, 224, 224) 1px solid; margin-top: 30px; transition: transform 0.2s;"
                     onmouseover="this.style.transform='scale(1.1)'; this.style.margin='10px'; this.style.border='none';"
                     onmouseout="this.style.transform='scale(1)'; this.style.margin='30px'; this.style.border='rgb(230, 224, 224) 1px solid';" />
                <h3 style="font-family: 'Roboto', sans-serif; font-weight: lighter; color: #000000;">@element.Name</h3>
                <h4 style="font-family: 'Roboto', sans-serif; font-weight: lighter; color: #000000;">€ @element.Price</h4>
                <p style="font-size: 12px;">@(element.ShowMore ? element.Description : element.Description.Substring(0, 40))</p>
                <button style="border: none; background-color: #f5f5f5; color: #000000; padding: 8px; margin-bottom: 30px; cursor: pointer;"
                        onclick="showTextClick(@element.Id)">
                    @element.ShowMore ? "Thu nhỏ" : "Xem thêm"
                </button>
                <a asp-controller="ContactUs" asp-action="Index">
                    <button style="background-color: #000000; color: #fff; border: none; padding: 8px;">Đặt lịch mua</button>
                </a>
            </div>
        }
    </div>

</body>
