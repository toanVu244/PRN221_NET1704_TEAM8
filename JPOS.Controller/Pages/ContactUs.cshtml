@page
@model JPOS.Controller.Pages.ContactUsModel
@{
    ViewData["Title"] = "Contact Us"; 
    <div class="container" style="max-width: 600px; margin: 0 auto;">
    <form action="https://formspree.io/f/m  pzbnday" id="contact" method="POST">
        <h3 style="font-family: 'Roboto', sans-serif; font-weight: lighter; color: #000000;">Liên hệ với chúng tôi</h3>
        <h4 style="font-family: 'Roboto', sans-serif; font-weight: lighter; color: #000000;">Chúng tôi sẽ trả lời bạn trong vòng 24 giờ.</h4>
        <fieldset style="border: none; margin: 10px 0; padding: 0;">
            <input placeholder="Họ và tên" type="text" tabindex="1" required style="width: 100%; padding: 10px; border: 1px solid #ccc; margin: 10px 0; font-family: 'Roboto', sans-serif;">
        </fieldset>
        <fieldset style="border: none; margin: 10px 0; padding: 0;">
            <input placeholder="Email" type="email" tabindex="2" name="email" required style="width: 100%; padding: 10px; border: 1px solid #ccc; margin: 10px 0; font-family: 'Roboto', sans-serif;">
        </fieldset>
        <fieldset style="border: none; margin: 10px 0; padding: 0;">
            <input placeholder="Số điện thoại (tùy ý)" type="tel" tabindex="3" style="width: 100%; padding: 10px; border: 1px solid #ccc; margin: 10px 0; font-family: 'Roboto', sans-serif;">
        </fieldset>
        <fieldset style="border: none; margin: 10px 0; padding: 0;">
            <textarea placeholder="Mô tả chi tiết" tabindex="5" name="message" required style="width: 100%; padding: 10px; border: 1px solid #ccc; margin: 10px 0; font-family: 'Roboto', sans-serif;"></textarea>
        </fieldset>
        <fieldset style="border: none; margin: 10px 0; padding: 0;">
            <button name="submit" type="submit" id="contact-submit" data-submit="...Enviando" style="padding: 10px 20px; background-color: #000000; color: #fff; border: none; font-family: 'Roboto', sans-serif; cursor: pointer;">Đăng kí</button>
        </fieldset>
    </form>
</div>

}
